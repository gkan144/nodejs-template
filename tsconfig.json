{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ES2020",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true
  },
  "include": ["src"]
}
